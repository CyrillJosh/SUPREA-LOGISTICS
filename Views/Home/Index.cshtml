<table class="table">
    <tr>
        <th>Truck</th>
        <th>Driver</th>
        <th>Status</th>
    </tr>
    @foreach(var v in Model)
    {
        <tr>
            <td>@v.UnitModelSeries - @v.BrandMake</td>
            <td>@(v.DriverInCharge?.FullName?? "-")</td>
            <td>@(v.VehicleStatus?? "-")</td>
        </tr>
    }
</table>
