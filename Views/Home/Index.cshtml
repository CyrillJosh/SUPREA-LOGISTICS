@{
    ViewData["Title"] = "Dashboard";
}
@model IEnumerable<Vehicle>

<!-- Dashboard Header -->
<div class="mb-4">
    <h1 class="text-primary">Fleet Dashboard</h1>
    <p class="text-muted">Overview of vehicles and status</p>
</div>

<!-- Executive Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Available Vehicles</h5>
                <h2>@Model.Count(v => v.VehicleStatus == "Available")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Unavailable Vehicles</h5>
                <h2>@Model.Count(v => v.VehicleStatus == "Unavailable")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Total Vehicles</h5>
                <h2>@Model.Count()</h2>
            </div>
        </div>
    </div>
</div>

<!-- Vehicle Type Summary Table -->
<div class="mb-4">
    <h3 class="text-secondary mb-3">Vehicle Summary by Type</h3>
    @{
        var types = Model.Select(v => v.UnitType).Distinct().ToList();
    }
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Owned</th>
                <th>Rented</th>
                <th>Lease</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in types)
            {
                <tr>
                    <td>@type</td>
                    <td>@Model.Count(v => v.OwnershipStatus == "Owned" && v.UnitType == type)</td>
                    <td>@Model.Count(v => v.OwnershipStatus == "Rented" && v.UnitType == type)</td>
                    <td>@Model.Count(v => v.OwnershipStatus == "Leased" && v.UnitType == type)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Vehicle Management Table -->
<div class="mb-5">
    <h3 class="text-secondary mb-3">Vehicle Driver and availability</h3>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Vehicle</th>
                    <th>Driver</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.UnitModelSeries - @v.BrandMake</td>
                        <td>@(v.DriverInCharge?.FullName ?? "-")</td>
                        <td>
                            <span class="badge @(v.VehicleStatus == "Available" ? "bg-success" : "bg-danger")">
                                @(v.VehicleStatus ?? "-")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

