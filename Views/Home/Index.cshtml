@{
    ViewData["Title"] = "Dashboard";
}
@model IEnumerable<Vehicle>

<!-- Executive Summary -->
<div>
    <div>
        @{
			var cat = Model.Select(v => v.UnitType).Distinct().ToList();
        }
        <table class="table">
            <thead>
                <tr>
                    <th class="px-3 text-center" colspan="3"><h1>Vehicle Summary</h1></th>
				</tr>
                <tr>
                    <th></th>
                    <th>Owned</th>
                    <th>Rented</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var type in cat)
                {
                    <tr>
                            <td>@type</td>
                            <td>
                                @(Model.Count(v => v.UnitType == type))
                            </td>
                            <td>
                                0
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="w-100 d-flex justify-content-evenly">
        <div class="p-4 bg-primary shadow-sm text-white border border-3 border-white" style="min-width:15rem">
            <h5>Total Vehicles</h5>
            <h2>@Model.Count()</h2>
        </div>
        <div class="p-4 bg-success shadow-sm text-white border border-3 border-white" style="min-width:15rem">
            <h5>Available Vehicles</h5>
            <h2>@Model.Count(v => v.VehicleStatus == "Available")</h2>
        </div>
        <div class="p-4 bg-danger shadow-sm text-white border border-3 border-white" style="min-width:15rem">
            <h5>Unavailable Vehicles</h5>
            <h2>@Model.Count(v => v.VehicleStatus == "Unavailable")</h2>
		</div>
    </div>
</div>
