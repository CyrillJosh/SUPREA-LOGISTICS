@{
	ViewData["Title"] = "Vehicle Logs";
}
@model IEnumerable<SUPREA_LOGISTICS.Models.VehicleLog>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary m-0">Maintenance Logs</h2>
    <div class="d-flex gap-2">
        <a asp-action="CreateVechicleLog" asp-controller="VehicleLog" class="btn btn-success">
            <i class="fa-solid fa-plus me-1"></i> New Log
        </a>
        <a href="#" class="btn btn-secondary" onclick="location.reload()">
            <i class="fa-solid fa-rotate me-1"></i> Refresh
        </a>
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fa-solid fa-ellipsis-vertical me-1"></i> Options
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-action="Export" asp-controller="VehicleLog">Export as CSV</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="card overflow-auto">
    <table class="table table-bordered table-hover mb-0">
        <thead class="table-info">
            <tr>
                <th>Vehicle Plate No.</th>
                <th>Date Created</th>
                <th>Description</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var log in Model)
                {
                    <tr>
                        <td>@(log.Vehicle?.PlateNo ?? "-")</td>
                        <td>@(log.CreatedAt.ToString() ?? "-")</td>
                        <td>@(log.Description ?? "-")</td>
                        <td>@(log.Remarks ?? "-")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center text-muted">No vehicle logs found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
